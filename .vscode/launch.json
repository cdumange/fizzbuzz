{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**", "**/*.spec.ts"],
      "program": "${workspaceRoot}/src/server.ts",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/src/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    }
  ]
}
